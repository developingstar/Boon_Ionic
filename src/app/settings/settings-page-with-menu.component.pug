ion-grid
  ion-row
    ion-col(col-2)
      ul.settings-menu
        div(*ngFor="let entry of menu")
          li([ngClass]="{'active': isActive(entry)}", (click)="goTo(entry.link)")
            | {{entry.label}}
          li(*ngIf="isActive(entry) && entry.children")
            ul
              li(*ngFor="let child of entry.children", [ngClass]="{'active': isActive(child)}", (click)="goTo(child.link)")
                | {{child.label}}
    ion-col.content
      ng-content
