nav-content
  nav-icons(right, currentPage="IntegrationPage")

settings-page-with-menu(currentPage="IntegrationPage")
  ion-row.integration-header
      ion-col(*ngIf="service | async; let s")
        h2 {{s.name}}
  form(#integrationForm="ngForm", (ngSubmit)="updateService()", autocomplete="off")        
    ion-row(*ngIf="service | async; let s")
      ion-col
        ion-label(stacked) TOKEN
        ion-input(name="token", type="text", [value]="s.token", [(ngModel)]="s.token" required, #token)
    ion-row
      ion-col
        ion-label(stacked) SECRET
        ion-input(name="secret", type="text", [(ngModel)]="secretModel")
    ion-row
      ion-col(col-4)
        button.boon-button(ion-button, full, type="submit", [disabled]="!integrationForm.form.valid")
          | Update Info
