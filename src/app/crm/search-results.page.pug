nav-content
  nav-icons(right, currentPage="LeadPage")
ion-header.top-bar
  ion-row
    div.type-navbar
      button.nav-item([ngClass]="{'nav-item-active': selectedNavItem === 'contact'}", (click)="setNavItem('contact')") Contacts
      button.nav-item([ngClass]="{'nav-item-active': selectedNavItem === 'deal'}", (click)="setNavItem('deal')") Deals
      button.nav-item([ngClass]="{'nav-item-active': selectedNavItem === 'referrer'}", (click)="setNavItem('referrer')") Referrers

ion-content(padding)
  ion-grid.table
    ion-row.header
      ion-col Name
      ion-col Email
      ion-col Phone number
      ion-col Created at
      ion-col.action
        button(ion-button, small, (click)="loadPrevPage()", [disabled]="isPrevPageButtonDisabled | async")
          ion-icon(name="md-arrow-dropleft")
        button(ion-button, small, (click)="loadNextPage()", [disabled]="isNextPageButtonDisabled | async")
          ion-icon(name="md-arrow-dropright")
    ion-row.lead(*ngFor="let item of (results | async)", (click)="showDetail(item)")
      ion-col {{item.name || "-"}}
      ion-col {{item.email || (item.contact && item.contact.email) || "-"}}
      ion-col {{item.phoneNumber || (item.contact && item.contact.phoneNumber) || "-"}}
      ion-col {{ (item.insertedAt || (item.contact && item.contact.insertedAt)) | date:'dd MMM yyyy hh:mm a' || "-"}}
      ion-col.action
        div.dot
        div.dot
        div.dot
